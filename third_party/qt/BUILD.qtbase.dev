load("@rules_cc//cc:defs.bzl", "cc_library")

exports_files([
    "libexec/moc",
    "libexec/rcc",
    "libexec/uic",
])

filegroup(
    name = "platforms",
    srcs = glob([
        "lib/qt-6/plugins/platforms/*offscreen*",
        "lib/qt-6/plugins/tls/*opensslbackend*",
    ]),
    visibility = ["//visibility:public"],
)

[cc_library(
    name = mod.lower(),
    hdrs = glob(["include/Qt%s/**" % mod]),
    includes = [
        "include",
        "include/Qt" + mod,
    ],
    visibility = ["//visibility:public"],
    deps = ["@qt6.qtbase.out//:" + mod.lower()],
) for mod in [
    "Concurrent",
    "Core",
    "DBus",
    "Gui",
    "OpenGL",
    "Network",
    "Test",
    "Widgets",
    "Xml",
]]
