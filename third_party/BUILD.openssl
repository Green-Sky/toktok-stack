load("@rules_cc//cc:defs.bzl", "cc_library")

cc_library(
    name = "crypto",
    srcs = select({
        "@toktok//tools/config:linux": ["lib/x86_64-linux-gnu/libcrypto.so"],
        "@toktok//tools/config:osx": ["lib/libcrypto.dylib"],
    }),
    hdrs = glob(["include/openssl/*.h"]),
    includes = ["include"],
    visibility = ["//visibility:public"],
)

