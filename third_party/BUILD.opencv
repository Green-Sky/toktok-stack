load("@rules_cc//cc:defs.bzl", "cc_library")

cc_library(
    name = "opencv",
    hdrs = glob([
        "include/opencv/*.h",
        "include/opencv2/**/*.h*",
    ]),
    includes = ["include"],
    visibility = ["//visibility:public"],
)

cc_library(
    name = "core",
    srcs = glob(["lib/x86_64-linux-gnu/libopencv_core.so*"]),
    visibility = ["//visibility:public"],
    deps = [":opencv"],
)

cc_library(
    name = "highgui",
    srcs = glob(["lib/x86_64-linux-gnu/libopencv_highgui.so*"]),
    visibility = ["//visibility:public"],
    deps = [":opencv"],
)
