ASOBJS = [src[:-3] + "o" for src in ASSRCS]

genrule(
    name = "config",
    srcs = glob(["**/*"]),
    outs = [
        "vp8_rtcd.h",
        "vp9_rtcd.h",
        "vpx_config.asm",
        "vpx_config.h",
        "vpx_dsp_rtcd.h",
        "vpx_scale_rtcd.h",
        "vpx_version.h",
    ],
    cmd = """
        cd `dirname $(location configure)`
        ./configure --enable-pic
        make vpx_version.h
        DIR=`pwd`
        cd -
        for i in $(OUTS); do
          cp $$DIR/`basename $$i` $$i
        done
    """,
)

genrule(
    name = "assemblies",
    srcs = ASSRCS + [
        "third_party/x86inc/x86inc.asm",
        "vpx_config.asm",
    ],
    outs = ASOBJS,
    cmd = "\n".join([
        "for src in {assrcs}; do".format(
            assrcs = " ".join(["$(location {})".format(src) for src in ASSRCS]),
        ),
        "  yasm {asopts} -o $(GENDIR)/$${{src%.asm}}.o $$src".format(
            asopts = " ".join(ASOPTS),
        ),
        "done",
    ]),
)

cc_library(
    name = "headers",
    hdrs = glob(["**/*.h"]) + [
        "vp9_rtcd.h",
        "vpx_dsp_rtcd.h",
        "vpx_scale_rtcd.h",
        "vp8_rtcd.h",
        "vpx_config.h",
    ],
    includes = [
        ".",
        "$(GENDIR)",
