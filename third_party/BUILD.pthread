cc_library(
    name = "pthreads_win32",
    srcs = ["pthread.c"],
    hdrs = glob(["*.h"]),
    copts = ["-DPTW32_BUILD"],
    defines = ["HAVE_STRUCT_TIMESPEC=1"],
    includes = ["."],
    textual_hdrs = ["exit.c"],
)

cc_library(
    name = "pthreads_posix",
    linkopts = ["-lpthread"],
)

cc_library(
    name = "pthread",
    visibility = ["//visibility:public"],
    deps = select({
        "@toktok//tools/config:windows": [":pthreads_win32"],
        "//conditions:default": [":pthreads_posix"],
    }),
)
