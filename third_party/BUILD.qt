cc_library(
    name = "qt_concurrent",
    srcs = [
        "lib/libQt5Concurrent.so",
        "lib/libQt5Concurrent.so.5",
    ],
    hdrs = glob(["include/QtConcurrent/**"]),
    includes = [
        "include",
        "include/QtConcurrent",
    ],
    linkopts = [
        "-Wl,-rpath,external/qt/lib",
        "-Lexternal/qt/lib",
        "-lQt5Concurrent",
    ],
    visibility = ["//visibility:public"],
    deps = [":qt_core"],
)

