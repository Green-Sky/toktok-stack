load("@ai_formation_hazel//tools:mangling.bzl", "hazel_library")
load("@rules_cc//cc:defs.bzl", "cc_library")
load("@rules_haskell//haskell:defs.bzl", "haskell_library")
load("@toktok//third_party/haskell:packages.bzl", "packages")

PACKAGE_NAME = "old-time"

genrule(
    name = "config",
    srcs = [
        "configure",
        "install-sh",
        "config.sub",
        "config.guess",
        "include/HsTime.h",
        "include/HsTimeConfig.h.in",
    ],
    outs = ["include/HsTimeConfig.h"],
    cmd = """
        cd `dirname $(location configure)`
        ./configure
        DIR=`pwd`
        cd -
        cp $$DIR/include/HsTimeConfig.h $@
    """,
)

cc_library(
    name = "cbits",
    srcs = [
        "cbits/timeUtils.c",
        "include/HsTime.h",
        "include/HsTimeConfig.h",
    ],
    copts = ["-D__GLASGOW_HASKELL__"],
    includes = ["include"],
)

haskell_library(
    name = PACKAGE_NAME,
    srcs = ["System/Time.hsc"],
    version = packages[PACKAGE_NAME].version,
    visibility = ["//visibility:public"],
    deps = [
        ":cbits",
        hazel_library("base"),
        hazel_library("old-locale"),
    ],
)
