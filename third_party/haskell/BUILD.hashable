load("@io_tweag_rules_haskell//haskell:haskell.bzl", "haskell_library")

cc_library(
    name = "cbits",
    srcs = glob(["cbits/*.c"]),
    copts = ["-Wno-unused-label"],
    deps = ["@ghc//:ffi"],
)

haskell_library(
    name = "hashable",
    srcs = glob(["Data/**/*.*hs"]),
    compiler_flags = ["-DGENERICS"],
    prebuilt_dependencies = [
        "base",
        "bytestring",
        "ghc-prim",
        "integer-gmp",
        "deepseq",
    ],
    version = "1.2.6.1",
    visibility = ["//visibility:public"],
    deps = [
        ":cbits",
        "@haskell_text//:text",
    ],
)
