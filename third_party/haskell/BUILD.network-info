load("@ai_formation_hazel//:hazel.bzl", "hazel_library")
load("@io_tweag_rules_haskell//haskell:haskell.bzl", "haskell_library", "haskell_test")
load("@toktok//third_party/haskell:packages.bzl", "packages")

cc_library(
    name = "cbits",
    srcs = ["cbits/network-unix.c"],
    hdrs = glob([
        "cbits/*.inc",
        "cbits/*.h",
    ]),
    # Needed for inline functions.
    copts = ["-O1"],
    includes = ["cbits"],
)

haskell_library(
    name = "network-info",
    srcs = ["src/Network/Info.hsc"],
    src_strip_prefix = "src",
    version = packages["network-info"].version,
    visibility = ["//visibility:public"],
    deps = [
        ":cbits",
        hazel_library("base"),
    ],
)

haskell_test(
    name = "test",
    srcs = ["test/src/Main.hs"],
    src_strip_prefix = "test/src",
    deps = [
        ":network-info",
        hazel_library("base"),
    ],
)
