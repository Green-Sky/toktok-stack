cc_library(
    name = "cbits",
    srcs = glob([
        "cbits/*.cc",
        "double-conversion/src/*.cc",
        "double-conversion/src/*.h",
        "include/*.h",
    ]),
    copts = [
        "-Iexternal/haskell_double_conversion/include",
        "-Iexternal/haskell_double_conversion/double-conversion/src",
        "-Wno-unused-function",
    ],
)

