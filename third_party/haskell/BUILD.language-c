load("@ai_formation_hazel//:hazel.bzl", "hazel_library")
load("@io_tweag_rules_haskell//haskell:haskell.bzl", "haskell_library")
load("@toktok//third_party/haskell:packages.bzl", "packages")

genrule(
    name = "Lexer",
    srcs = ["src/Language/C/Parser/Lexer.x"],
    outs = ["src/Language/C/Parser/Lexer.hs"],
    cmd = "alex -o $@ $<",
)

genrule(
    name = "Parser",
    srcs = ["src/Language/C/Parser/Parser.y"],
    outs = ["src/Language/C/Parser/Parser.hs"],
    cmd = "happy -agc -o $@ $<",
)

haskell_library(
    name = "language-c",
    srcs = glob([
        "src/**/*.hs*",
    ]) + [
        ":Parser",
        ":Lexer",
    ],
    compiler_flags = [
        "-XDeriveGeneric",
    ],
    src_strip_prefix = "src",
    version = packages["language-c"].version,
    visibility = ["//visibility:public"],
    deps = [
        hazel_library("array"),
        hazel_library("base"),
        hazel_library("bytestring"),
        hazel_library("containers"),
        hazel_library("deepseq"),
        hazel_library("directory"),
        hazel_library("filepath"),
        hazel_library("pretty"),
        hazel_library("process"),
        hazel_library("syb"),
    ],
)
