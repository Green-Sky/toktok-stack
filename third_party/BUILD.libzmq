genrule(
    name = "regen_config",
    srcs = glob(["**"]),
    outs = ["platform.hpp"],
    cmd = """
        mkdir `dirname $(location CMakeLists.txt)`/_build
        cd `dirname $(location CMakeLists.txt)`/_build
        cmake ..
        DIR=`pwd`
        cd -
        for i in $(OUTS); do
          cp $$DIR/`echo $$i | sed -e 's|$(GENDIR)/external/libzmq/||'` $$i
        done
    """,
)

cc_library(
    name = "libzmq",
    srcs = glob(
        [
            "src/*.cpp",
            "src/*.h",
            "src/*.hpp",
        ],
        exclude = ["test/*"],
    ),
    hdrs = [
        "include/zmq.h",
        "include/zmq_utils.h",
    ],
    copts = [
        "-DZMQ_POLL_BASED_ON_POLL",
        "-Iexternal/toktok/third_party/libzmq/freebsd",
        "-Iexternal/toktok/third_party/libzmq/linux",
        "-Iexternal/toktok/third_party/libzmq/osx",
        "-fexceptions",  # Needed to catch std::bad_alloc.
    ] + select({
        "@toktok//tools/config:freebsd": ["-DZMQ_IOTHREAD_POLLER_USE_KQUEUE"],
        "@toktok//tools/config:linux": ["-DZMQ_IOTHREAD_POLLER_USE_EPOLL"],
        "@toktok//tools/config:osx": ["-DZMQ_IOTHREAD_POLLER_USE_KQUEUE"],
    }),
    includes = ["include"],
    linkopts = ["-lpthread"],
    visibility = ["//visibility:public"],
    deps = [
        "@libsodium",
        "@toktok//third_party/libzmq:platform",
    ],
)
