genrule(
    name = "config",
    srcs = glob(["**"]),
    outs = ["platform.hpp"],
    cmd = """
        mkdir `dirname $(location CMakeLists.txt)`/_build
        cd `dirname $(location CMakeLists.txt)`/_build
        cmake ..
        DIR=`pwd`
        cd -
        for i in $(OUTS); do
          cp $$DIR/`echo $$i | sed -e 's|$(GENDIR)/external/libzmq/||'` $$i
        done
    """,
)

cc_library(
    name = "libzmq",
    srcs = glob(
        [
            "src/*.cpp",
            "src/*.h",
            "src/*.hpp",
        ],
        exclude = ["test/*"],
    ) + ["platform.hpp"],
    hdrs = [
        "include/zmq.h",
        "include/zmq_utils.h",
    ],
    includes = ["include"],
    linkopts = ["-lpthread"],
    visibility = ["//visibility:public"],
    deps = ["@libsodium"],
)
